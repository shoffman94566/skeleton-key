<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res/com.kp.skey"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="U-U Passwords"
        android:id="@+id/title_text_view"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unforgettable Unpronounceable Passwords"
        android:layout_below="@id/title_text_view"
        android:id="@+id/subtitle_text_view"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <com.kp.skey.FontButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check a U-U Password"
        android:id="@+id/check_button"
        android:layout_below="@+id/subtitle_text_view"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        app:fontspannabletextview_partialText="@string/check"
        app:fontspannabletextview_partialTextColor="@color/check_green"/>
    <com.kp.skey.FontButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create a U-U Password"
        android:id="@+id/create_button"
        android:layout_below="@+id/check_button"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        app:fontspannabletextview_partialText="@string/create"
        app:fontspannabletextview_partialTextColor="@color/create_brown"/>

    <com.kp.skey.FontButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change a U-U Password"
        android:id="@+id/change_button"
        android:layout_below="@+id/create_button"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        app:fontspannabletextview_partialText="@string/change"
        app:fontspannabletextview_partialTextColor="@color/change_blue"/>

    <include layout="@layout/footer"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             android:layout_centerHorizontal="true"
             android:layout_marginBottom="10dp"/>
</RelativeLayout>