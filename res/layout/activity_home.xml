<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res/com.kp.skey"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
    android:background="#fff">

    <ImageView android:layout_width="match_parent"
               android:layout_height="100dp"
               android:id="@+id/header_imageview"
               android:src="@drawable/header"
                android:scaleType="centerInside"
        android:layout_marginTop="16dp"/>

    <com.kp.skey.FontButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check a U-U Password"
        android:id="@+id/check_button"
        android:layout_below="@+id/header_imageview"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        app:fontspannabletextview_partialText="@string/check"
        app:fontspannabletextview_partialTextColor="@color/check_green"/>
    <com.kp.skey.FontButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create a U-U Password"
        android:id="@+id/create_button"
        android:layout_below="@+id/check_button"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        app:fontspannabletextview_partialText="@string/create"
        app:fontspannabletextview_partialTextColor="@color/create_brown"/>

    <com.kp.skey.FontButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change a U-U Password"
        android:id="@+id/change_button"
        android:layout_below="@+id/create_button"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        app:fontspannabletextview_partialText="@string/change"
        app:fontspannabletextview_partialTextColor="@color/change_blue"/>

    <include layout="@layout/footer"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             android:layout_centerHorizontal="true"
             android:layout_marginBottom="10dp"/>
</RelativeLayout>